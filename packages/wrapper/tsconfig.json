{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "preserveConstEnums": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "lib",
    "declarationDir": "lib"
  },
  "include": ["next-env.d.ts", "src"],
  "exclude": ["node_modules"]
}
